<!-- no need for thumnails unless there is more then one image -->
<% if product.images.size > 1 %>
    <ul id="product-thumbnails" class="thumbnails inline" data-hook>
      <% product.images.each do |i| %>
          <li class="tmb-all" id="tmb-<%= i.id.to_s %>"><%= link_to image_tag(i.attachment.url(:product_thumb)), i.attachment.url(:product) %></li>
      <% end %>
    </ul>
<% end %>
