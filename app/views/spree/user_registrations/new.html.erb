<% if defined?(aux_links).nil? %>
    <% aux_links = true %>
<% end %>

<% @body_id = 'signup' %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>

<div id="new-customer" xmlns="http://www.w3.org/1999/html">
  <h4><%= t(:first_timer) %></h4>
  <span class="desc"><%= t(:reg_desc) %></span>
  <div data-hook="signup">
    <%= form_for :user, :url => spree.user_registration_path(@user) do |f| %>
        <div data-hook="signup_inside_form">
          <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
          <p><%= f.submit t(:create), :class => 'button primary' %></p>
        </div>
    <% end %>
    <% if aux_links %>
        <%= t(:or) %> <%= link_to t(:login_as_existing), spree.login_path %>
    <% end %>
  </div>
</div>

<div data-hook="login_extras"></div>
